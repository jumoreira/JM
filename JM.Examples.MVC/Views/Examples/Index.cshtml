@model JM.Examples.MVC.Models.Exemplo
@using JM.Web.MVC.Util;
@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm("Index", "Examples"))
{
    using (new BootstrapPanel(Html.ViewContext, "TESTE"))
    {
        @Html.BootstrapTextBoxFor(i => i.PropertyString, 4, new { @class = "form-control input-sm" })
        @Html.BootstrapTextBoxFor(i => i.PropertyStringWithPlaceholder, 4, new { @class = "form-control input-sm" })
        @Html.BootstrapTextBoxFor(i => i.PropertyStringNoPlaceholder, 4, new { @class = "form-control input-sm" }, addPlaceholder: false)
        @Html.BootstrapTextBoxFor(i => i.PropertyInt, 4, new { @class = "form-control input-sm" }, type: BoxInputType.Number)
        @Html.BootstrapTextBoxFor(i => i.PropertyDate, 4, new { @class = "form-control input-sm" }, BoxInputType.Date)
    }
}

